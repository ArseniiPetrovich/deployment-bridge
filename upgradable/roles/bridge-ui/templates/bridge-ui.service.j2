[Unit]
Description=bridge-ui
After=network.target

[Service]
Type=oneshot
RemainAfterExit=true
User={{ ansible_user }}
Group={{ ansible_user }}
WorkingDirectory={{ bridge_ui_path }}/build
ExecStart=/usr/bin/pm2 start --name bridge-ui --interpreter http-server {{ bridge_ui_path }}/build
[Install]
WantedBy=multi-user.target
