[parity]
{% if chain_json_url != "" %}
chain = "{{ chain_name | lower }}.json"
{% else %}
chain = "{{ chain_name }}"
{% endif %}
base_path = "parity_data"

[network]
port = {{ p2p_port }}
discovery = true
nat = "extip:{{ ansible_host }}"
{% if bootnodes_url != "" %}
reserved_peers = "{{ bootnodes_url | basename }}"
{% endif %}

[rpc]
port = {{ rpc_port }}

[websockets]
port = {{ ws_port }}

{% if signer_address != "" %}
[account]
unlock = ["{{ signer_address }}"]
password = ["pass.pwd"]
{% endif %}

{% if mining %}
[mining]
engine_signer = "{{ signer_address }}"
reseal_on_txs = "none"
{% endif %}

[misc]
log_file = "logs/parity.log"
